
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>搜尋</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <div class="col-3">
                        <div class="form-group row">
                            <label class="col-12 col-form-label">充電站ID</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="veh_brand" name="veh_brand">
                            </div>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="form-group row">
                            <label class="col-12 col-form-label">客戶ID</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="veh_brand" name="veh_brand">
                            </div>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="form-group row">
                            <label class="col-12 col-form-label">充電站名稱</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="veh_brand" name="veh_brand">
                            </div>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="form-group row">
                            <label class="col-12 col-form-label">站點類型</label>
                            <div class="col-12">
                                <input type="text" class="form-control" id="veh_brand" name="veh_brand">
                            </div>
                        </div>
                    </div>
                    <div class="col-12 text-right">
                        <a class="btn btn-info" href="/Follow/Create">
                            搜尋
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

